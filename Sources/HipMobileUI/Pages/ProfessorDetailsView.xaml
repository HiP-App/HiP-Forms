<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		   	 Title="Adventurer"
			 xmlns:helpers="clr-namespace:PaderbornUniversity.SILab.Hip.Mobile.UI.Helpers;assembly=HipMobileUI"
	         xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="PaderbornUniversity.SILab.Hip.Mobile.UI.Pages.ProfessorDetailsView">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#7FACFF">
	        <Image Source="ic_professor.png" AbsoluteLayout.LayoutBounds=".15,.25,.4,.4" AbsoluteLayout.LayoutFlags="All">
			</Image>
			 <Label x:Name="AdventurerLabel" Grid.Row="1"
	        Text="{helpers:Translate CharacterSelectionPage_Professor_Text}" TextColor="Black"
	        FontSize="Medium" AbsoluteLayout.LayoutBounds=".9,.45,.4,.4" AbsoluteLayout.LayoutFlags="All"/>
	        <BoxView AbsoluteLayout.LayoutBounds=".5,.85,1.0,.20" AbsoluteLayout.LayoutFlags="All" Color="White" />
			<Button x:Name="SelectModeButton"
							BackgroundColor ="#7FACFF"
							TextColor="Black"
							AbsoluteLayout.LayoutBounds=".5,.75,.5,.06" AbsoluteLayout.LayoutFlags="All"
                            Text="Choose this mode"
                            Command="{Binding SelectModeButton}" />
			<Button x:Name="ChangeModeButton"
							BackgroundColor ="#FFE57F"
							TextColor="Black"
                            AbsoluteLayout.LayoutBounds=".5,.85,.5,.06" AbsoluteLayout.LayoutFlags="All"
                            Text="Check other mode"
                            Command="{Binding ChangeModeButton}" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>