<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaderbornUniversity.SILab.Hip.Mobile.UI.Pages.QuizStartingPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Quiz" 
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Bisher hast du" HorizontalOptions="Center"/>
            <Label Text="{Binding Score}" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"/>
            <Label Text="Fragen richtig beantwortet" HorizontalOptions="Center"/>
            <Button Text="Quiz starten" HorizontalOptions="Center" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>