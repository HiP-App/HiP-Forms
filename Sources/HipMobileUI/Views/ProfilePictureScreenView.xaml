             x:Class="PaderbornUniversity.SILab.Hip.Mobile.UI.Views.ProfilePictureScreenView">
    <ContentView.Content>
        <views:NotificationExtensionView>
            <views:NotificationExtensionView.ContentTemplate>
                <Grid x:Name="OuterGrid" BackgroundColor="White">
                    <!--Top for current and new avatar-->
                    <!--The row and column definition is made in code to adjust them to the device orientation-->
                    <Grid x:Name="InnerGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.1*" />
                            <RowDefinition Height="0.8*" />
                            <RowDefinition Height="0.1*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <!--first row-->
                        <AbsoluteLayout Grid.Row="0" Grid.Column="0">
                            <Label FontSize="23" Text="{helpers:Translate ProfileView_Overview_Score}"
                                   Style="{DynamicResource Ssp-Regular}" TextColor="Black" />
                        </AbsoluteLayout>
                        <AbsoluteLayout Grid.Row="0" Grid.Column="1">
                            <Label FontSize="23" Text="{helpers:Translate ProfileView_Overview_Score}"
                                   Style="{DynamicResource Ssp-Regular}" TextColor="Black" />
                        </AbsoluteLayout>

                        <!--second row-->
                        <AbsoluteLayout Grid.Row="1" Grid.Column="0">
                            <!--current avatar-->
                        
                                <BoxView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,    0.5,    0.9,    0.9" BackgroundColor="{StaticResource DarkGrayColor}"/>
                                <Image AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,   0.5,   0.85,    0.45" Aspect="AspectFit" Source="{Binding Avatar}"/>
                                   
                                
                            </AbsoluteLayout>
                            <!--new avatar-->
                            <AbsoluteLayout Grid.Row="1" Grid.Column="1">
                                <BoxView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,    0.5,    0.9,    0.9" BackgroundColor="{StaticResource DarkGrayColor}"/>
                                <Image AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,   0.5,   0.85,    0.45" Aspect="AspectFit" Source="{Binding Avatar}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding OnImageTappedCommand}"
                                            NumberOfTapsRequired="1" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </AbsoluteLayout>
                      
                        <!--thrid row-->
                        <AbsoluteLayout Grid.Row="2" Grid.Column="0">
                            <Label FontSize="23" Text="{helpers:Translate ProfileView_Overview_Score}"
                                Style="{DynamicResource Ssp-Regular}" TextColor="Black" />
                        </AbsoluteLayout>
                        <AbsoluteLayout Grid.Row="2" Grid.Column="1">
                            <Label FontSize="23" Text="{helpers:Translate ProfileView_Overview_Score}"
                                Style="{DynamicResource Ssp-Regular}" TextColor="Black" />
                        </AbsoluteLayout>
                        
                    </Grid>



                    
                    
                    
                    
                    
                    
