<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:PaderbornUniversity.SILab.Hip.Mobile.UI.Helpers;assembly=HipMobileUI"
             x:Class="PaderbornUniversity.SILab.Hip.Mobile.UI.Views.ForgotPasswordScreenView">
    <ContentView.Content>
        <Grid x:Name="Grid" Padding="10" HorizontalOptions="Fill">
            <Label x:Name="TitleLabel" FontSize="Medium" HorizontalOptions="Center"
                   Text="{helpers:Translate ForgotPasswordScreenView_Forgot_Password}" />
            <Label x:Name="InfoLabel" FontSize="Small" HorizontalOptions="Center"
                   Text="{helpers:Translate ForgotPasswordScreenView_Info}" />
            <Entry x:Name="EmailEntry" Keyboard="Email"
                   Placeholder="{helpers:Translate ForgotPasswordScreenView_Email}"
                   Text="{Binding Email, Mode=OneWayToSource}" TextChanged="EmailEntry_TextChanged" />
            <Label x:Name="ErrorMessageLabel" FontSize="Small" TextColor="Red" HorizontalOptions="Center"
                   Text="{Binding ErrorMessage, Mode=TwoWay}" />
            <Button x:Name="ResetPasswordButton" Text="{helpers:Translate ForgotPasswordScreenView_Reset_Password}"
                    Command="{Binding ResetPasswordCommand}" />
        </Grid>
    </ContentView.Content>
</ContentView>