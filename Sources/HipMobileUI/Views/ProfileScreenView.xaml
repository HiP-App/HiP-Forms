<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaderbornUniversity.SILab.Hip.Mobile.UI.Views.ProfileScreenView"
             xmlns:container1="clr-namespace:PaderbornUniversity.SILab.Hip.Mobile.UI.Container;assembly=HipMobileUI">
    <ContentView.Content>
        <container1:TabContainerView Tabs="{Binding Tabs}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White">
            <container1:TabContainerView.TabViews>
                
                <Grid x:Name="OverviewGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.4*"/>
                        <RowDefinition Height="0.4*"/>
                        <RowDefinition Height="0.2*"/>
                    </Grid.RowDefinitions>

                    <StackLayout x:Name="NameAndIcon" Grid.Row="0" Orientation="Vertical" VerticalOptions="CenterAndExpand" Padding="5,15">
                        <Image WidthRequest="200" HeightRequest="50" Aspect="AspectFit" Source="{Binding Avatar}"></Image>
                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center" TextColor="{StaticResource AccentColor}" Margin="5"/>
                        <Label Text="{Binding EMail}" FontSize="10" HorizontalTextAlignment="Center" Margin="0"/>
                    </StackLayout>
                    <StackLayout x:Name="Scores" Grid.Row="1" Spacing="0" Orientation="Vertical" VerticalOptions="StartAndExpand" Padding="5,5,5,0">
                        <Label FontSize="14" Text="Punkte:" Margin="3,5,3,0" HorizontalTextAlignment="Center"
                               TextColor="{StaticResource PrimaryColor}" BackgroundColor="{StaticResource MediumGrayColor}"/>
                        <Label FontSize="25" Text="{Binding Score}" Margin="3,0" HorizontalTextAlignment="Center"
                               TextColor="{StaticResource AccentColor}" FontAttributes="Bold" BackgroundColor="{StaticResource LightGrayColor}"/>
                        <Label FontSize="14" Text="Erfolge:" Margin="3,5,3,0" HorizontalTextAlignment="Center"
                               TextColor="{StaticResource PrimaryColor}" BackgroundColor="{StaticResource MediumGrayColor}"/>
                        <Label FontSize="25" Text="{Binding Achievements}" Margin="3,0" HorizontalTextAlignment="Center"
                               TextColor="{StaticResource AccentColor}" FontAttributes="Bold" BackgroundColor="{StaticResource LightGrayColor}"/>
                        <Label FontSize="14" Text="Fortschritt:" Margin="3,5,3,0" HorizontalTextAlignment="Center"
                               TextColor="{StaticResource PrimaryColor}" BackgroundColor="{StaticResource MediumGrayColor}"/>
                        <Label FontSize="25" Text="{Binding Completeness}" Margin="3,0" HorizontalTextAlignment="Center"
                               TextColor="{StaticResource AccentColor}" FontAttributes="Bold" BackgroundColor="{StaticResource LightGrayColor}"/>
                    </StackLayout>
                    <StackLayout x:Name="Logout" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="End" Padding="3">
                        <Button WidthRequest="200" HeightRequest="40" BorderRadius="2" BorderColor="{StaticResource DarkGrayColor}" BorderWidth="1"
                                Command="{Binding Logout}" Text="Abmelden" TextColor="{StaticResource AccentDarkColor}" BackgroundColor="{StaticResource MediumGrayColor}"></Button>
                    </StackLayout>
                </Grid>
                
                <Grid x:Name="AchievementsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>

                    <StackLayout x:Name="AchievementsTitle" Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <Label FontSize="30" HorizontalTextAlignment="Center">Erfolge: 12 / 30</Label>
                    </StackLayout>
                    <ScrollView x:Name="ScrollView" Grid.Row="1">
                        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Label FontSize="30" HorizontalTextAlignment="Center">Erfolg</Label>
                            <Label FontSize="30" HorizontalTextAlignment="Center">Erfolg</Label>
                            <Label FontSize="30" HorizontalTextAlignment="Center">Erfolg</Label>
                            <Label FontSize="30" HorizontalTextAlignment="Center">Erfolg</Label>
                            <Label FontSize="30" HorizontalTextAlignment="Center">Erfolg</Label>
                            <Label FontSize="30" HorizontalTextAlignment="Center">Erfolg</Label>
                            <Label FontSize="30" HorizontalTextAlignment="Center">Erfolg</Label>
                            <Label FontSize="30" HorizontalTextAlignment="Center">Erfolg</Label>
                        </StackLayout>
                    </ScrollView>
                </Grid>
                
                <Grid x:Name="StatisticsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackLayout Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <Label FontSize="30" HorizontalTextAlignment="Center">Statistik</Label>
                    </StackLayout>
                </Grid>

            </container1:TabContainerView.TabViews>
        </container1:TabContainerView>
    </ContentView.Content>
</ContentView>